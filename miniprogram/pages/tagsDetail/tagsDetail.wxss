/* pages/tagsDetail/tagsDetail.wxss */

.contanier {
  position: absolute;
  width: 100%;
  
  display: flex;
  flex-direction: column;
}

.input_contanier {
  width: 100%;
  height: 8%;
  box-sizing: border-box;
  padding: 5px 5px;
  display: flex;
}
.return_back{
  display: flex;
  width:10%;
  align-items:center;
  font-size: 12px;
  margin:auto;
  padding-left:5px;
  text-align:center;
}
.input {
  align-items: center;
  font-size: 12px;
  padding:0 30rpx;
  width:90%;
  margin: auto 0;
  background-color: #EEEEEE;
  border-radius: 10rpx;
}

.tags {
  width: 100%;
  box-sizing: border-box;
  margin-top:10px;
}
.hahatag{
  display:flex;
  flex-wrap: wrap;
}
.tag-box1 {
  flex-direction: row;
  display:inline-flex;
  margin-top:10px;
  margin-left: 10px;
  font-size: 14px;
  padding: 0 6px;
  height:30px;
  width:40%;
}
.tag-box2 {
  display:inline-flex;
  margin-top:10px;
  margin-left: 10px;
  font-size:14px;
  font-weight:500;
  padding: 0 6px;
  height:40px;
  line-height: 30px;
  width:100%;
  border-bottom:1px solid rgba(211, 211, 211, 0.5);
}

.tag_logo{
  width:15px;
  height:15px;
  opacity: 0.6;
  margin-right: 10px;
  margin-top:2px;
}
.my_tags {
  width: 100%;
  box-sizing: border-box;
  padding-top: 10px;
  margin-left: 10px;
  border-top:1px solid rgba(211, 211, 211, 0.5) ;
  opacity: 1;
  display:inline-flex;

}
.my_tagss {
  width: 100%;
  box-sizing: border-box;
  padding-top: 20px;
  margin-left: 10px;
  opacity: 1;
  display:inline-flex;
}

.my-tag-box {
  font-size: 15px;
  letter-spacing: 1.5;
  color:#000;
  font-weight:500;
  width:100%;
  
  padding: 0 6px;
  
}
.imgwo{
  height:20px;
  width:20px;
}


