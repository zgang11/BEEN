/* pages/tripmap/tripmap.wxss */
.container{
 position: fixed;
 width:100%;
 height:100%;
 display: flex;
 flex-direction: column; 
 align-items: center;
}
.trips{
  position: absolute;
  display: flex;
  width:100%;
  height:30px;
  font-size:18px;
  letter-spacing:1.5px;
  color:#7B7B7B;
  font-weight: 500;
  background-color:#FFFFFF;
  padding: 14rpx 0px;
  padding-left: 20px;
  line-height: 35px;
  align-items: center;
  top: 0;
}
.mapcontainer{
  width:100%;
  height: 100%;
  display: flex; 
  flex-direction: column;
  align-items: center;
}
.map{
  width:100%;
  height: 100%;
}
.img{
  width:24rpx;
  height:24rpx;
  margin-left: 14rpx;
  
}
.trip-container{
  position: absolute;
  background-color: white;
  width:100%;
  font-size:15px;
  top: 44px;
  letter-spacing: 1px;
  color:#848383;
  font-weight: 500; 
}
.tex{
  padding: 4px 24px;
  background-color: white;
  height:25px;
}
.editor{
  position: fixed;
  width:30px;
  height:30px;
  right: 15px;
  bottom: 120px;
  background-color: #6C8980;
  padding: 15px 15px;
  border-radius: 50%;
  box-shadow: 0 0 10px rgb(68, 138, 116);
}

.chioce-list-show{
  
  animation: slide 500ms;
}

@keyframes slide {
  0% {
    top: -215px;
  }

  100% {
    top: 44px;
  }
}

.chioce-list-hide {
  display: none !important;
}
.mask{
  width: 100%;
  height:100%;  
  background-color: rgba(180, 173, 173,0.3);
}

.bingo{
  width:15px;
  height: 15px;
  float: right;
}


