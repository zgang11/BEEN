/* pages/detail/detail.wxss */
.detail-box{
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  width:100%;
  height:100%;
}

.images-bottom{
  width: 100%;
  box-sizing: border-box;
  padding: 10px 10px;
}

.images-slider{
  width:100%;
  height: 250px;
}

.des{
  
  
  padding: 10rpx 0;
  
}

.content{
  display: block;
  word-break:break-all;
  box-sizing:border-box; 
  width:100%;
  font-size:16px;
  padding: 10rpx 10px;
  min-height: 100px;
}
.tab-box{
  border:1.3px solid #6C8980;
  border-radius: 15px;
  padding: 5rpx 20rpx 5rpx 20rpx;
  font-size:13px;
  color:#6C8980;
  margin-right: 5px;
  margin-bottom: 5px;
  display: inline-block;
}

.locimg{
  width:12px;
  height:12px;
  margin-right: 10rpx;
  vertical-align: -1px;
}

.text{
  font-size: 14px;
  margin-left: -1px;
  margin-top: -1px;
  line-height: 37px;
  color: rgb(82, 80, 80);
}

.location{
   box-sizing:border-box; 
   padding: 10rpx 10px;
}

.slide-image{
    display: block;
    height: 250px;
    width:100%
}
.swiper{
  width: 100%;
  height:250px;
}
.edit-area{
  position: fixed;
  display: flex;
  width:100%;
  flex-direction: row;
  bottom:0;
  background-color: rgb(201, 192, 192);
}
.edit{
  width:50%;
  height: 50px;
  text-align: center;
  line-height: 45px;
  font-size:16px;
}

.dot_s{
  width: 20px;
  height: 20px;
  position: absolute;
  right: 15px;
  top: 12px;
}

.savebutton{
  position: fixed;
  background-color: #728880;
  bottom: 100px;
  right: 40px;
  padding: 2px 20px;
  border-radius: 14px;
  font-size: 18px;
}
