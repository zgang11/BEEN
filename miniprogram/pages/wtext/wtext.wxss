/* pages/wtext/wtext.wxss */
.container{
  position: absolute;
  width:100%;
  height:100%;
  display: flex;
  flex-direction: column;
}

.nav-bar{
  width: 100%;
  background-color: rgb(255, 255, 255);
  padding: 10rpx 0;
}

.btn{
  text-align: center;
  letter-spacing: 1.4px;
  font-weight:500;
  height: 28px;
  width:65px;
  line-height: 28px;
  border-radius: 10rpx;
  font-size:14px;
  color:white;
  float: right;
  margin-top:5px;
  margin-right:15px;
  background-color: #6C8980;
}

.img{
  width:25px;
  height:25px;
  margin-top: 5px;
  margin-left: 20rpx;
}

.content{
  
  padding:10px 10px;
}
.text{
  width: 100%;
  height:150px;
}

.addimg{
  width:50px;
  height:50px;
}

.imgp{
  width:108px;
  height:108px;
  border-radius:10px;
}

.imgp-wrpper{
  position: relative;
  display: inline-block;
  padding-right:10rpx;
  padding-left: 10rpx;
  width: 108px;
  height:108px;
}

.position{
  line-height: 31px;
  font-size: 0;
  padding:5rpx 0;
}

.locimg{
  width:15px;
  height:15px;
  
  margin-right: 10rpx;
  vertical-align: -2px;
}

.text{
  align-items: center;
  font-size: 15px;
  color:#ADB4B2;
  letter-spacing: 1.21px;
  font-weight: 500;
}


.tab{
  margin-left: 10px;
  padding: 0rpx 0;
}

.tab-box{
  border:1.3px solid #6C8980;
  border-radius: 15px;
  padding: 5rpx 20rpx 5rpx 20rpx;
  font-size:13px;
  color:#6C8980;
  margin-right: 5px;
  margin-bottom: 5px;
  display: inline-block;
}

.remove-box{
  position: absolute;
  top:0;
  left: 0;
  z-index: 10;
  width: 15px;
  height:15px;
}